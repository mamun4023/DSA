  class Node{
    constructor(value){
      this.value = value;
      this.next = null;
      this.prev = null;
    }
  }


  class Doubly_linkedList{
    constructor(){
      this.length = 0;
      this.head = null;
      this.tail = null;
    }


    add(data){
      var node = new Node(data);
      if(this.head === null){
        this.head = node;
        this.length++;
      }else {
        let traverse = this.head;
        while(traverse.next){
          traverse = traverse.next;
        }
        traverse.next = node;
        node.prev = traverse;
        this.length++;
    }
  }

    // display
    display(){
      let traverse = this.head;
      while(traverse){
        console.log(traverse);
        document.write(traverse.value+ " ")
        traverse = traverse.next;
      }
    }
  }


var obj = new Doubly_linkedList();
obj.add(10);
obj.add(20);
obj.add(100);
obj.add(100);
obj.display()



================== improvemnet ==========================
class Node {
  constructor(value) {
    this.value = value;
    this.next = null;
    this.prev = null;
  }
}

class DoublyLinkedList {
  constructor() {
    this.head = null;
    this.tail = null;
    this.length = 0;
  }

  // Add to the end: O(1)
  push(val) {
    const newNode = new Node(val);
    if (!this.head) {
      this.head = newNode;
      this.tail = newNode;
    } else {
      this.tail.next = newNode;
      newNode.prev = this.tail;
      this.tail = newNode;
    }
    this.length++;
    return this;
  }

  // Remove from the end: O(1)
  pop() {
    if (!this.tail) return null;
    const removedNode = this.tail;
    
    if (this.length === 1) {
      this.head = null;
      this.tail = null;
    } else {
      this.tail = this.tail.prev;
      this.tail.next = null;
      removedNode.prev = null; // Clean up reference
    }
    
    this.length--;
    return removedNode;
  }

  // Remove from the front: O(1)
  shift() {
    if (!this.head) return null;
    const oldHead = this.head;
    
    if (this.length === 1) {
      this.head = null;
      this.tail = null;
    } else {
      this.head = oldHead.next;
      this.head.prev = null;
      oldHead.next = null; // Clean up reference
    }
    
    this.length--;
    return oldHead;
  }
}
