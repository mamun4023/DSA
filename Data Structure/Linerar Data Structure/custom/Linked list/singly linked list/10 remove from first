
class Node{
  constructor(data){
    this.data = data;
    this.next = null;
  }
}


class Linked_list{
  constructor(){
    this.head = null;
  }


  insert(data){
    let newNode = new Node(data);

    if(this.head  == null){
      this.head = newNode;
    }else{
      newNode.next = this.head;
      this.head = newNode;
  }
}

// insert at any position
 insertAt(data, pos){
  let i=1; 
  let newNode = new Node(data);
  let traverse = this.head;
  while(i<pos-1){
        i++;
        traverse = traverse.next;
  }
  let after = traverse.next;
  traverse.next = newNode;
  newNode.next = after;
 }

  // display
  display(){
    let traverse = this.head; 
    while(traverse){
      document.write(traverse.data+ " ")
      traverse = traverse.next;
    }
  }


  // remove first node
  remove(){
    this.head = this.head.next;
  }
}



var obj = new Linked_list();

obj.insert(10);
obj.insert(10);
obj.insert(20);
obj.insert(100);
obj.insert(500);
obj.insertAt(300,6);
obj.remove();
obj.display();
