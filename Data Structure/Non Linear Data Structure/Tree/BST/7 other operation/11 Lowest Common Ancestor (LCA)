LCA(node, p, q) {
    // 1. If the current node is null, stop and return null
    if (!node) return null;

    // 2. If the current node is one of the targets, return the node
    if (node.value === p || node.value === q) {
        return node;
    }

    // 3. Recurse left and right
    let left = this.LCA(node.left, p, q);
    let right = this.LCA(node.right, p, q);

    // 4. If we found something on both sides, this node is the LCA
    if (left !== null && right !== null) {
        return node;
    }

    // 5. Otherwise, return whichever side found a target (or null)
    return left !== null ? left : right;
}
