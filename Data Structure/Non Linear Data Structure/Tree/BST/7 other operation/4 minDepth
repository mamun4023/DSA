minHeightOfTree(node) {
    // 1. Base case: Empty tree
    if (node == null) return 0;

    // 2. If left is null, we must go right
    if (node.left == null) {
        return this.minHeightOfTree(node.right) + 1;
    }

    // 3. If right is null, we must go left
    if (node.right == null) {
        return this.minHeightOfTree(node.left) + 1;
    }

    // 4. If both exist, take the smaller of the two
    const left = this.minHeightOfTree(node.left);
    const right = this.minHeightOfTree(node.right);

    return Math.min(left, right) + 1;
}
